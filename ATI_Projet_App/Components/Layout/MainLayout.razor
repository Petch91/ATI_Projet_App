@inherits LayoutComponentBase

@using Microsoft.Extensions.Localization
@using System.Globalization
@using ATI_Projet_Cultures.Locales
@inject IStringLocalizer<PersonnelResource> localizer

<AuthorizeView>
    <Authorized>
        <NavMenu></NavMenu>

        @Body

        <div id="blazor-error-ui">
            An unhandled error has occurred.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center flex-column p-2 h-100">
            <div class="d-flex flex-column gap-2 login text-center">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 w-50">
                        <img src="/images//ATI.png" class="w-75" alt="logo" />
                    </div>
                    <h3 class="flex-grow-1 ms-3">ATI Projets</h3>
                </div>
                @* <p class="text-danger">Veuillez vous connecter s'il vous plait</p> *@
            <Alert Color="AlertColor.Danger"> <Icon Name="IconName.ExclamationTriangleFill" class="me-2"></Icon>@localizer["Veuillez vous connecter s'il vous plait"] </Alert>
                <button class="btn btn-primary btn-lg" @onclick="GoLogin">Login</button>
            </div>

        </div>

    </NotAuthorized>
</AuthorizeView>


