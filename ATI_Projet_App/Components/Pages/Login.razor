@page "/login"

<h3>Login</h3>


<EditForm Model="Form" OnValidSubmit="Login_">

    <DataAnnotationsValidator></DataAnnotationsValidator>

    <label>Email</label>
    <InputText @bind-Value="Form.Email"></InputText>

    <label>Password</label>
    <InputText @bind-Value="Form.Password"></InputText>

    <ValidationSummary></ValidationSummary>

    <input type="submit" value="Valider" />
</EditForm>