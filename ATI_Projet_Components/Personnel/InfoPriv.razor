@if(!string.IsNullOrEmpty(CodePays))
{
   <div class="private gap-3 border-top p-2 m-1 position-relative">
      <div class="d-flex border-bottom" style="min-height: 8rem">
         <div class="adresse w-100">
            <h5>@localizer["Adresse"]: </h5>
            <div class="row">
               <span class="fw-semibold col-3 text-end">@localizer["Rue et Numéro"]:</span>
               <p class="col "> @Adresse.adresse</p>
            </div>
            <div class="row">
               <span class="fw-semibold col-3 text-end">@localizer["Code Postal"]:</span>
               <p class="col-2 "> @Adresse.CodePostal</p>
               <span class="fw-semibold col-2 text-end ">@localizer["Localité"]:</span>
               <p class="col "> @Adresse.Localite</p>
            </div>
            <div class="row">
               <span class="fw-semibold col-7 text-end ">@localizer["Pays"]:</span>
               <p class="col">@paysLocalizer[CodePays]</p>
            </div>
         </div>
      </div>
      <div class="p-1" style="min-height: 6rem">
         <div class="row">
            <span class="fw-semibold col text-end">@localizer["Date de naissance"]:</span>
            <p class="col"> @EmployePrivate.DateNaissance.ToString("dd/MM/yyyy")</p>
            <span class="fw-semibold col text-end">@localizer["Langue"]:</span>
            <p class="col"> @langLocalizer[EmployePrivate.Langue]</p>
         </div>
         <div class="row">
            <span class="fw-semibold col text-end">@localizer["Nationalité"]:</span>
            <p class="col"> @natLocalizer[EmployePrivate.Nationalite]</p>
            <span class="fw-semibold col text-end">@localizer["Numéro National"]:</span>
            <p class="col"> @EmployePrivate.NumeroNational</p>
         </div>
         <div class="row">
            <span class="fw-semibold col text-end">IBAN:</span>
            <p class="col"> @EmployePrivate.IBAN</p>
            <span class="fw-semibold col text-end">@localizer["Permis"]:</span>
            <p class="col "> @EmployePrivate.Permis</p>
         </div>
      </div>
      @* <button class="btn btn-primary position-absolute bottom-0 end-0 m-2" @onclick="ShowEditPrivate">Edit</button> *@
   </div>

   <Modal @ref="modal" Size="ModalSize.ExtraLarge" />
}
